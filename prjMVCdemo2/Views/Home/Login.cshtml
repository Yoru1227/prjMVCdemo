
@{
    ViewBag.Title = "Login";
}

<h2>登入系統</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h3>輸入帳號與密碼</h3>      
            <div class="col-md-10">
                帳號(註冊時填寫的Email)
                <br />
                @Html.TextBox("txtAccount", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-10">
                密碼
                <br />
                @Html.TextBox("txtPassword", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="登入" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("取消", "List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}